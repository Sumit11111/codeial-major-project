<html>
    <head>
        <title><%= title%></title>
    </head>
    <body>
        <h1>Home Page</h1>
        <section id="feed-posts">
            <h4>Posts</h4>
            <%if(locals.user){%>
            <form action="/userPost/create" id="new-post-form" method="post">
                <textarea name="content" placeholder="Enter some feeds..." cols="30" rows="10" required></textarea>
                <input type="submit" value="Post">
            </form>
            <%}%>
        <div id="posts-list-container">
            <ul>
                <%for(i of userPosts){%>
                    <li> 
                        <p>
                            <%=i.content%>
                            <br>
                            <small>
                                <%=i.user.name%>
                            </small>
                        </p>
                        <div class="post-comments">
                            <%if(locals.user){%>
                            <form action="/comments/create" method="post">
                                <input type="text" name="content" placeholder="Enter your comment here...." required>
                                <input type="hidden" name="post" value="<%=i._id%>">
                                <input type="submit" value="Add Comment">
                            </form>
                            <%}%>
                            <div class="post-comments-list">
                                <ul id="post-comments-<%=i._id%>">
                                    <%for (j of i.comments){%>
                                        <p>
                                            <%=j.content%>
                                            <br>
                                            <small>
                                                <%=j.user.name%>
                                            </small>
                                        </p>
                                        <%}%>

                                </ul>

                            </div>
                        </div>

                    </li>
                    <%}%>
                        
            </ul>
            </div>
        </section>
    </body>
</html>